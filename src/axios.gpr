-- Project file for the  Http server case study. 
project Build is 

  for Object_Dir use "obj/" & external ("mode", "debug");
  for Object_Dir use "obj/" & external ("mode", "release");

  -- Compiler flags
  package Compiler is 
    case Mode is 
    when "debug" =>
      for Switches ("Ada") use ("-g");
    when "release" => 
      for Switches ("Ada") use ("-O2");
    end case;
  end Compiler;

end Build;
